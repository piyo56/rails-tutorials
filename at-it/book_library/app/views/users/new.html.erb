<h1>新規利用者</h1>

<div style="color: red; font-weight: bold;">
<% if @user.errors.any? %>
  <% @user.errors.messages.values.each do |v| %>
    <p><%= v[0] %></p>
  <% end %>
<% end %>
</div>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :department %><br>
    <%= f.text_field :department %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
<%= link_to 'Back', users_path %>
